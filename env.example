# Supabase Configuration
SUPABASE_URL=your_supabase_project_url
SUPABASE_ANON_KEY=your_supabase_anon_key
SUPABASE_SERVICE_KEY=your_supabase_service_role_key

# Server Configuration
PORT=3000
NODE_ENV=production

# Logging
LOG_LEVEL=info
LOG_FILE_PATH=./logs

# HubSpot Integration (Optional - for CRM sync)
HUBSPOT_API_KEY=your_hubspot_api_key
HUBSPOT_CLIENT_ID=your_hubspot_client_id
HUBSPOT_CLIENT_SECRET=your_hubspot_client_secret

# QuickBooks Online Integration (Optional - for accounting)
QUICKBOOKS_CLIENT_ID=your_quickbooks_client_id
QUICKBOOKS_CLIENT_SECRET=your_quickbooks_client_secret
QUICKBOOKS_REALM_ID=your_quickbooks_realm_id
QUICKBOOKS_ACCESS_TOKEN=your_quickbooks_access_token
QUICKBOOKS_REFRESH_TOKEN=your_quickbooks_refresh_token

# Microsoft Graph API (Optional - for Outlook email integration)
MICROSOFT_CLIENT_ID=your_microsoft_client_id
MICROSOFT_CLIENT_SECRET=your_microsoft_client_secret
MICROSOFT_TENANT_ID=your_microsoft_tenant_id

# OpenAI API (Optional - for AI assistant)
OPENAI_API_KEY=your_openai_api_key

# Session Secret (generate a random string)
SESSION_SECRET=your_random_session_secret_here
